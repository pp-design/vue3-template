{
  "name": "vue3-template",
  "version": "1.0.0",
  "author": "",
  "description": "A vue3 template",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "lint": "npm run lint:js & npm run lint:css",
    "lint:js": "eslint --fix --ext .js,.vue,.ts ./src",
    "lint:css": "stylelint --fix src/**/*.{vue,css,sass,scss,less}",
    "commit": "git add . && git-cz",
    "prepare": "husky install",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "dependencies": {
    "vue": "^3.2.16"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/babel__core": "^7.1.17",
    "@types/connect-history-api-fallback": "^1.3.5",
    "@types/inquirer": "^8.2.0",
    "@types/pretty": "^2.0.0",
    "@types/shelljs": "^0.8.9",
    "@types/yargs": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-vue": "^1.9.3",
    "@vitejs/plugin-vue-jsx": "^1.2.0",
    "@vue/compiler-sfc": "^3.2.20",
    "connect-history-api-fallback": "^1.6.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.2.0",
    "eslint-config-tencent": "^1.0.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.1.1",
    "fast-glob": "^3.2.7",
    "husky": "^7.0.4",
    "inquirer": "^8.2.0",
    "lint-staged": "^12.0.2",
    "mockjs": "^1.1.0",
    "postcss-html": "^1.3.0",
    "prettier": "^2.4.1",
    "pretty": "^2.0.0",
    "sass": "^1.43.4",
    "shelljs": "^0.8.4",
    "stylelint": "^14.2.0",
    "stylelint-config-recommended-vue": "^1.1.0",
    "stylelint-config-tencent": "^1.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.1.0",
    "typescript": "^4.4.3",
    "vite": "^2.6.13",
    "vite-plugin-mock": "^2.9.6",
    "vite-plugin-svg-icons": "^1.0.5",
    "vue-tsc": "^0.3.0",
    "yargs": "^17.2.1"
  },
  "lint-staged": {
    "src/**/*.{ts,js,vue,jsx}": "npm run lint:js",
    "src/**/*.{css,scss,less}": "npm run lint:css"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
